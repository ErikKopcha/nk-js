{
  "name": "start",
  "version": "1.0.0",
  "description": "Gulp Automation Template",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.15"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "9.7.6",
    "browser-sync": "2.26.7",
    "deep-extend": "0.6.0",
    "del": "5.1.0",
    "gulp": "4.0.2",
    "gulp-cli": "2.2.0",
    "gulp-concat": "2.6.1",
    "gulp-csso": "4.0.1",
    "gulp-htmlmin": "5.0.1",
    "gulp-imagemin": "7.1.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "8.0.0",
    "gulp-posthtml": "3.0.4",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-svgstore": "7.0.1",
    "gulp-uglify": "3.0.2",
    "gulp-webp": "4.0.1",
    "merge": "1.2.1",
    "normalize.scss": "0.1.0",
    "posthtml-include": "1.4.3",
    "stylelint": "13.3.3",
    "stylelint-config-htmlacademy": "0.1.4"
  },
  "dependencies": {}
}
